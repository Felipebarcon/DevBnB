<div class="d-flex align-items-center justify-content-center">
          <div class="product-grid animate__animated animate__zoomIn">
              <div class="product-image">
              <% if @order.project.photo.attached? %>
                <a href="#" class="image">
                  <img class="img-1" src="<%= cl_image_path @order.project.photo.key, height: 300, crop: :fill %>">
                </a>
              <% end %>
              </div>
              <div class="product-content">
                  <h3 class="project-name"><%= @order.project.name %></h3>
                  <p style="text-align: justify;"><%= @order.project.details %></p>
                  <h3 class="status"><%= @order.status %></h3>
                  <h3 class="comment"><%= @order.comment %></h3>
                  <div class="date"><%= @order.starts_at %></div>
              </div>
          </div>
      </div>

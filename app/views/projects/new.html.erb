<div class="container">
  <h1>Create a new project</h1>

  <%= simple_form_for @project do |f| %>
  <%= f.error_notification %>
   <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :price %>
      <%= f.text_field :price %>
      <%= f.label :duration %>
      <%= f.text_field :duration %>
      <%= f.input :photo, as: :file %>
    </div>
    <%= f.submit class: "btn-primary"%>

  <% end %>
</div>
